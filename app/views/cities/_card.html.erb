<div class="card mb-3">
  <h2 class="card-header h4">
    City #<%= city.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Name</dt>
      <!-- Display name start -->
      <dd><%= city.name %></dd>
      <!-- Display name end -->

      <dt>Country</dt>
      <!-- Display country_id start -->
      <dd>
        <% if @city.country.present? %>
          <%= link_to city.country, city.country %>
        <% end %>
      </dd>
      <!-- Display country_id end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back city, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link city start -->
      <div class="col">
        <%= link_to edit_city_url(city), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link city end -->

      <!-- Delete link city start -->
      <div class="col">
        <%= link_to city, method: :delete, data: { confirm: "Do you really want to delete this city?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link city end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(city.updated_at) %> ago
  </div>
</div>
