<% was_validated = restaurant.errors.any? %>

<%= form_with(model: restaurant, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% country_class = "form-control" %>
    <% country_was_invalid = restaurant.errors.include?(:country) %>

    <% if was_validated %>
      <% if country_was_invalid %>
        <% country_class << " is-invalid" %>
      <% else %>
        <% country_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :country_id %>
    <%= f.number_field :country_id, class: country_class, placeholder: "Enter country" %>
    <% if country_was_invalid %>
      <% restaurant.errors.full_messages_for(:country).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% name_class = "form-control" %>
    <% name_was_invalid = restaurant.errors.include?(:name) %>

    <% if was_validated %>
      <% if name_was_invalid %>
        <% name_class << " is-invalid" %>
      <% else %>
        <% name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :name %>
    <%= f.text_field :name, class: name_class, placeholder: "Enter name" %>
    <% if name_was_invalid %>
      <% restaurant.errors.full_messages_for(:name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% rating_class = "form-control" %>
    <% rating_was_invalid = restaurant.errors.include?(:rating) %>

    <% if was_validated %>
      <% if rating_was_invalid %>
        <% rating_class << " is-invalid" %>
      <% else %>
        <% rating_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :rating %>
    <%= f.number_field :rating, class: rating_class, placeholder: "Enter rating" %>
    <% if rating_was_invalid %>
      <% restaurant.errors.full_messages_for(:rating).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
