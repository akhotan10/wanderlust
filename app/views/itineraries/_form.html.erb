<% was_validated = itinerary.errors.any? %>

<%= form_with(model: itinerary, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for country_id start -->
  <div class="form-group">
    <% country_class = "form-control" %>
    <% country_was_invalid = itinerary.errors.include?(:country) %>

    <% if was_validated %>
      <% if country_was_invalid %>
        <% country_class << " is-invalid" %>
      <% else %>
        <% country_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :country_id %>
    <!-- Input for country_id start -->
    <%= f.number_field :country_id, class: country_class, placeholder: "Enter country" %>
    <!-- Input for country_id end -->
    <% if country_was_invalid %>
      <% itinerary.errors.full_messages_for(:country).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for country_id end -->
  <!-- Label and input for trip_id start -->
  <div class="form-group">
    <% trip_class = "form-control" %>
    <% trip_was_invalid = itinerary.errors.include?(:trip) %>

    <% if was_validated %>
      <% if trip_was_invalid %>
        <% trip_class << " is-invalid" %>
      <% else %>
        <% trip_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :trip_id %>
    <!-- Input for trip_id start -->
    <%= f.number_field :trip_id, class: trip_class, placeholder: "Enter trip" %>
    <!-- Input for trip_id end -->
    <% if trip_was_invalid %>
      <% itinerary.errors.full_messages_for(:trip).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for trip_id end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
