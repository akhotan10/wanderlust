<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Itineraries

    <a data-toggle="collapse" href="#trip_itineraries_new_form">
      Add itinerary
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @trip.itineraries.each do |itinerary| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to itinerary, itinerary %>

        <%= link_to itinerary, method: :delete, data: { confirm: "Do you really want to delete this itinerary" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="trip_itineraries_new_form">
        <%= render partial: "trips/trip_itineraries_new_form" %>
      </div>
    </div>

  </ul>
</div>
